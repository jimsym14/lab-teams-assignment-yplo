<div class="auth-links">
  <div class="auth-secondary-links">
    <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "ui-btn ui-btn-secondary" %>
    <% end %>

    <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "ui-btn ui-btn-secondary" %>
    <% end %>
  </div>

  <% if devise_mapping.omniauthable? && controller_name != 'sessions' && controller_name != 'registrations' %>
    <div class="auth-social-links">
      <div class="auth-social-provider-group">
        <% resource_class.omniauth_providers.each do |provider| %>
          <% provider_label = provider.to_s == "google_oauth2" ? "Google" : OmniAuth::Utils.camelize(provider) %>
          <%= button_to omniauth_authorize_path(resource_name, provider), method: :post, form: { data: { turbo: false } }, class: "ui-btn btn-google" do %>
            <svg class="google-logo-svg" viewBox="0 0 18 18" focusable="false">
              <path fill="#EA4335" d="M17.64 9.2045c0-.6382-.0573-1.2518-.1636-1.8409H9v3.4818h4.8436c-.2086 1.125-.8427 2.0782-1.7986 2.715v2.2582h2.9086c1.7027-1.5668 2.6864-3.8741 2.6864-6.6141z"/>
              <path fill="#4285F4" d="M9 18c2.43 0 4.4673-.8068 5.9564-2.1818l-2.9086-2.2582c-.806.54-1.8368.8591-3.0478.8591-2.3432 0-4.3282-1.5818-5.0387-3.7091H.9573v2.3318C2.4382 15.9832 5.4818 18 9 18z"/>
              <path fill="#FBBC05" d="M3.9613 10.7091A5.406 5.406 0 013.6791 9c0-.5932.1023-1.1686.2822-1.7091V4.9591H.9573A8.9955 8.9955 0 000 9c0 1.4523.3477 2.8277.9573 4.0409l3.004-2.3318z"/>
              <path fill="#34A853" d="M9 3.5795c1.3214 0 2.5077.4546 3.4405 1.3455l2.5814-2.5814C13.4632.8918 11.4259 0 9 0 5.4818 0 2.4382 2.0168.9573 4.9591l3.004 2.3318C4.6718 5.1614 6.6568 3.5795 9 3.5795z"/>
            </svg>
            <span>Sign in with <%= provider_label %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
