<section class="section-card">
  <div class="page-title-row">
    <h1>Todos</h1>
  </div>

  <div class="page-actions-row">
    <%= link_to "New todo", new_todo_path, class: "ui-btn ui-btn-primary" %>
  </div>

  <div id="todos">
    <% if @todos.any? %>
      <% @todos.each do |todo| %>
        <%= render todo %>
        <div class="page-actions-row">
          <%= link_to "Show this todo", todo, class: "ui-btn ui-btn-secondary" %>
        </div>
      <% end %>
    <% else %>
      <p class="empty-state">Δεν υπάρχουν todos ακόμη.</p>
    <% end %>
  </div>
</section>
