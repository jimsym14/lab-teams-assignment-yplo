<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="post-form-errors">
      <h2><%= pluralize(post.errors.count, "error") %> εμπόδισαν την αποθήκευση της ανάρτησης:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field post-field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field post-field">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <div class="field post-field">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 10, class: "post-body-input" %>
  </div>

  <div class="actions post-form-actions">
    <%= form.submit "Αποθήκευση", class: "ui-btn ui-btn-primary" %>
  </div>
<% end %>
